CC = gcc
SRC= main.c school.c
OBJ = main.o school.o
NAME = school
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c $< -o $@

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME) $(OBJ)
	$(RM) $(OBJ)

re:
	$(RM) $(OBJ)
	$(CC) main.c -c -o main.o
	$(CC) school.c -c -o school.o
	$(CC) $(OBJ) -o $(NAME)
